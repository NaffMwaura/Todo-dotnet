@page
@model RazorTodoApp.Pages.TodoModel
@{
    ViewData["Title"] = "To-Do List";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <input asp-for="NewTask" placeholder="Add new task..." />
    <button type="submit" asp-page-handler="Add">Add</button>
</form>

<ul>
@foreach (var item in Model.TodoList)
{
    <li>
        <input type="checkbox" checked="@item.IsDone" />
        @item.Task
    </li>
}
</ul>
