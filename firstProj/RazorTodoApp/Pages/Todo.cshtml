@page
@model RazorTodoApp.Pages.TodoModel

<h2>To-Do List</h2>

<form method="post">
    <input asp-for="NewTask" placeholder="Enter new task" />
    <button type="submit" asp-page-handler="Add">Add</button>
</form>

<ul>
    @foreach (var task in Model.TodoList)
    {
        <li>@task.Task</li>
    }
    
</ul>
